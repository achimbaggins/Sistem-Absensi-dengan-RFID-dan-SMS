<!DOCTYPE html>
<html>
  <head>
    <%- include css.ejs %>

  </head>
  <body>

    <%- include head.ejs %>

    <div class="container">

        <form class="form-inline" action="/students/edit/<%= data.id %>" method="post">
          <table class="table table-striped">
            <tr>

              <td>
                <label for="">Nama Siswa</label><br>
                <input class="form-control" type="text" name="name" value="<%= data.name %>"> <br><br>

                <label for="">Email</label><br>
                <input class="form-control" type="text" name="email" value="<%= data.email %>"> <br><br>

                <button class="btn btn-primary btn-sm" type="submit" name="button">Edit Student</button>
              </td>

              <td>
                <label for="">Alamat</label><br>
                <input class="form-control" type="text" name="address" value="<%= data.address %>"> <br><br>

                <label for="">Nomor HP Wali Murid</label><br>
                <input class="form-control" type="text" name="no_hp" value="<%= data.no_hp %>"> <br><br>
              </td>

              <td>
                <label for="">File Foto</label><br>
                <input class="form-control" type="text" name="img" value="<%= data.img %>"> <br><br>

                <label for="">RFID</label><br>
                <input class="form-control" type="text" name="rfid" value="<%= data.rfid %>"> <br><br>
              </td>

            </tr>
          </table>
        </form>

      <br><br>
    </div>
  </body>
</html>
