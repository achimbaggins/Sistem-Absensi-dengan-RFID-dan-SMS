<!DOCTYPE html>
<html>
  <head>
    <%- include css.ejs %>

  </head>
  <body>
      <%- include head.ejs %>

    <div style="margin-top:35px"><!---->

      <div style="width:50%;float:left" class=""><!--rangka untuk no ID-->
        <div style="width:50%;left:0;right:0;margin-left:auto;margin-right:auto">
          <form class="form-inline" action="/subjects/<%= subid %>/isi-presensi" method="post">
            <input style="margin-top:50px" class="form-control" type="text" name="rfid" value="" autofocus placeholder="Tap Card Here"><!--input No ID-->
            <button type="submit" name="button">Isi Presensi</button>
          </form>
        </div>
      </div>

      <div style="width:50%;float:left" class=""><!--rangka untuk foto-->
        <%if(data.length == 0){ %>

        <%} else { %>
          <div style="width:50%;left:0;right:0;margin-left:auto;margin-right:auto"  align="center">
            <% if(data[0].Student.img == ''){ %>
              <img src="../../img/no_pict.png" alt="foto" style="border-radius: 70px; height: 140px;">
            <% } else { %>
            <img src="../../img/<%= data[0].Student.img %>" alt="foto" style="border-radius: 70px; height: 140px;">
            <%}%>
            <table style="text-align: center">
              <td><h4>Selamat Datang : <%= data[0].Student.name %></h4></td>
              <!-- <td></td> -->
            </table><br>
          </div>
        <%}%>

      </div>
    </div>

    <div class="container">
      <%if(pesan){ %>
        <h4 style="color:red"><%= pesan %></h4>
      <%}%>
      <%if(data.length == 0){ %>

      <%} else { %>
        <h3>Jumlah siswa : <%= dataStudent.length %>, Hadir : <%= data.length%>, Belum Hadir : <%= dataStudent.length - data.length %></h3>
      <%}%>
      <!--tabel-->
      <table class="table table-striped">
        <thead>
          <tr>
            <th>No</th>
            <th>ID</th>
            <th>Nama Siswa</th>
            <th>Email</th>
            <th>No Handphone Wali</th>
          </tr>
        </thead>
        <%if(data.length == 0){ %>
          Belum ada yang ada siswa yang hadir, tap di atas yah!
        <%} else { %>
          <% var i =1; data.forEach(d => { %>
            <tbody>
              <tr>
                <td> <%= i++ %> </td>
                <td> <%= d.Student.id %> </td>
                <td> <%= d.Student.name %> </td>
                <td> <%= d.Student.email %> </td>
                <td> <%= d.Student.no_hp %> </td>
              </tr>
            </tbody>
          <% }) %>
        <%}%>
      </table>
    </div>

  </body>
</html>
